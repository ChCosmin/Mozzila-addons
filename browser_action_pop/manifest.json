{

    "description": "This extension allows you to change the body color of the page",
    "manifest_version": 2,
    "name": "Rainbodify",
    "version": "1.0",
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery.min.js"],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/color-32.png",
        "default_title": "Rainbodify",
        "default_popup": "popup/rainbodify.html"
    }      

}